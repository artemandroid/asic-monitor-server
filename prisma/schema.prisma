generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Miner {
  id                 String   @id
  ip                 String?
  asicType            String?
  firmware            String?
  authType            String?
  expectedHashrate    Float?
  lastSeen            DateTime?
  online              Boolean?
  readStatus          String?
  error               String?
  lastMetric          Json?
  lastOnlineAt        DateTime?
  lastRestartAt       DateTime?
  lastLowHashrateAt   DateTime?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Command {
  id         String   @id
  minerId    String
  type       String
  status     String
  createdAt  DateTime @default(now())
  executedAt DateTime?
  error      String?
}

model Settings {
  id                       Int      @id @default(1)
  autoRestartEnabled       Boolean  @default(true)
  restartDelayMinutes      Int      @default(10)
  hashrateDeviationPercent Float    @default(10)
  notifyAutoRestart        Boolean  @default(true)
  notifyRestartPrompt      Boolean  @default(true)
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  type      String
  message   String
  minerId   String?
  action    String?
  createdAt DateTime @default(now())
}
