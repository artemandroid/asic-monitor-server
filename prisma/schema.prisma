generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Miner {
  id                 String   @id
  ip                 String?
  asicType            String?
  firmware            String?
  authType            String?
  expectedHashrate    Float?
  autoRestartEnabled  Boolean  @default(false)
  postRestartGraceMinutes Int  @default(10)
  lowHashrateThresholdGh Float?
  autoPowerOnGridRestore Boolean @default(false)
  autoPowerOffGridLoss Boolean @default(false)
  boundTuyaDeviceId     String?
  autoPowerOffGenerationBelowKw Float?
  autoPowerOnGenerationAboveKw Float?
  autoPowerOffBatteryBelowPercent Float?
  autoPowerOnBatteryAbovePercent Float?
  autoPowerRestoreDelayMinutes Int @default(10)
  overheatProtectionEnabled Boolean @default(true)
  overheatShutdownTempC Float @default(84)
  overheatLocked Boolean @default(false)
  overheatLockedAt DateTime?
  overheatLastTempC Float?
  lastSeen            DateTime?
  online              Boolean?
  readStatus          String?
  error               String?
  lastMetric          Json?
  lastOnlineAt        DateTime?
  lastRestartAt       DateTime?
  lastLowHashrateAt   DateTime?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model Command {
  id         String   @id
  minerId    String
  type       String
  status     String
  createdAt  DateTime @default(now())
  executedAt DateTime?
  error      String?
}

model Settings {
  id                       Int      @id @default(1)
  autoRestartEnabled       Boolean  @default(true)
  minerSyncIntervalSec     Int      @default(60)
  deyeSyncIntervalSec      Int      @default(60)
  tuyaSyncIntervalSec      Int      @default(60)
  restartDelayMinutes      Int      @default(10)
  postRestartGraceMinutes  Int      @default(10)
  lowHashrateThresholdGh   Float    @default(10)
  hashrateDeviationPercent Float    @default(10)
  notifyAutoRestart        Boolean  @default(true)
  notifyRestartPrompt      Boolean  @default(true)
  notificationVisibleCount Int      @default(2)
  criticalBatteryOffPercent Float   @default(30)
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  type      String
  message   String
  minerId   String?
  action    String?
  createdAt DateTime @default(now())
}
